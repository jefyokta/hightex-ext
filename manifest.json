{
  "name": "Hightex Reference Extensions",
  "description": "A integreted chrome reference extensions for hightex application",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "storage",
    "cookies"
  ],
    "host_permissions": [
    "https://scholar.googleusercontent.com/*",
    "https://ieeexplore.ieee.org/*"

  ],
    "action": {
    "default_popup": "dist/index.html"
  },
   "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts":[
    {
      "matches": ["https://scholar.google.com/*"],
      "js": ["dist/scholar.js"],
        "run_at":"document_idle"
    }
  ]

}